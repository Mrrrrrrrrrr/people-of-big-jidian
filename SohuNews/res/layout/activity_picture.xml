<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF">
    
    <LinearLayout android:id="@+id/picture_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#CCCCCC">
        <TextView android:id="@+id/picture_title_best"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="精选"
            android:textColor="#000000"
            android:gravity="center"
            android:background="#FFFFFF"/>
        <TextView android:id="@+id/picture_title_fun"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="娱乐"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView android:id="@+id/picture_title_interesting"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="奇趣"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>
        
    
    <android.support.v4.view.ViewPager
        android:id="@+id/pictureViewPagerLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>